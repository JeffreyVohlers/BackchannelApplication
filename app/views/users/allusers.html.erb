<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.username, user %>
      </li>

      <% if current_user.is_admin? && !current_user?(user) %>
          <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>

      <% if user.posts.any? %>
          <h3>Posts (<%= user.posts.count %>)</h3>
          <ul class="posts">
            <% user.posts.each do |post| %>
                <li>
                  <%= link_to post.content, post %>
                </li>
            <% end %>
          </ul>
      <% end %>
  <% end %>
</ul>
<%= render 'shared/post' %>